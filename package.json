{
  "name": "@shelf/dynamodb-parallel-scan",
  "version": "2.2.3",
  "description": "Scan large DynamoDB tables faster with parallelism",
  "keywords": [
    "aws",
    "dynamodb",
    "parallel-scan"
  ],
  "repository": "shelfio/dynamodb-parallel-scan",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf lib/ && yarn build:types && babel src --out-dir lib --ignore '**/*.test.ts' --extensions .ts",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.json --fix --quiet",
    "lint:ci": "eslint . --ext .js,.ts,.json --quiet",
    "prepack": "yarn build",
    "test": "cross-env ENVIRONMENT=local RUNS_PARALLEL_SCAN_TEST=true jest src --runInBand",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "lint-staged": {
    "*.{html,json,md,yml}": [
      "prettier --write --ignore-path=./.eslintignore",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "babel": {
    "extends": "@shelf/babel-config/backend"
  },
  "prettier": "@shelf/prettier-config",
  "dependencies": {
    "cross-env": "^7.0.3",
    "debug": "4.3.2",
    "lodash.chunk": "4.2.0",
    "lodash.clonedeep": "4.5.0",
    "lodash.times": "4.3.2",
    "p-map": "4.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "3.36.0",
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.8",
    "@shelf/babel-config": "0.1.4",
    "@shelf/eslint-config": "2.0.0",
    "@shelf/jest-dynamodb": "2.1.0",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.6",
    "@types/debug": "4.1.7",
    "@types/jest": "27.0.2",
    "@types/lodash.chunk": "4.2.6",
    "@types/lodash.clonedeep": "4.5.6",
    "@types/lodash.times": "4.3.6",
    "@types/node": "14",
    "@types/p-map": "2.0.0",
    "aws-sdk": "2.631.0",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "jest": "27.2.5",
    "lint-staged": "11.2.1",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "4.4.3"
  },
  "peerDependencies": {
    "aws-sdk": "2.x.x"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  }
}
